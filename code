  <script>
    // Splash screen removal
    window.addEventListener('DOMContentLoaded', function() {
      setTimeout(function() {
        document.querySelector('.splash').style.display = 'none';
      }, 5000);
    });
    // Section navigation
    document.querySelectorAll('.container').forEach(c => c.classList.remove('active'));
    document.getElementById('home').classList.add('active');
    document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
    document.querySelector('nav a[href="#home"]').classList.add('active');
    document.querySelectorAll('nav a').forEach(tab => {
      tab.addEventListener('click', function(e) {
        e.preventDefault();
        document.querySelectorAll('.container').forEach(c => c.classList.remove('active'));
        document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
        const sectionId = this.getAttribute('href').replace('#', '');
        if (document.getElementById(sectionId)) {
          document.getElementById(sectionId).classList.add('active');
          this.classList.add('active');
        }
        window.scrollTo({top:0,behavior:'smooth'});
      });
    });
    document.getElementById('requestBloodBtn').addEventListener('click', function(e) {
      e.preventDefault();
      document.querySelectorAll('.container').forEach(c => c.classList.remove('active'));
      document.getElementById('request').classList.add('active');
      document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
      document.querySelector('nav a[href="#request"]').classList.add('active');
      window.scrollTo({top:0,behavior:'smooth'});
    });
    document.getElementById('fabBtn').addEventListener('click', function() {
      document.querySelectorAll('.container').forEach(c => c.classList.remove('active'));
      document.getElementById('request').classList.add('active');
      document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
      document.querySelector('nav a[href="#request"]').classList.add('active');
      window.scrollTo({top:0,behavior:'smooth'});
    });
    // Dark/Light mode toggle
    const darkToggle = document.getElementById('darkToggle');
    function setTheme(dark) {
      document.documentElement.setAttribute('data-theme', dark ? 'dark' : '');
      darkToggle.innerHTML = dark ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
      localStorage.setItem('lifelineTheme', dark ? 'dark' : 'light');
    }
    darkToggle.addEventListener('click', () => {
      setTheme(document.documentElement.getAttribute('data-theme') !== 'dark');
    });
    if (localStorage.getItem('lifelineTheme') === 'dark') setTheme(true);
    // --- Form Validation & UX ---
    const form = document.getElementById('bloodRequestForm');
    const checkBtn = document.getElementById('checkBtn');
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const bloodGroup = document.getElementById('bloodGroup').value.trim().toUpperCase();
      const location = document.getElementById('location').value.trim();
      const contact = document.getElementById('contact').value.trim();
      const countryCode = document.getElementById('countryCode').value;
      const result = document.getElementById('result');
      result.innerHTML = '';
      checkBtn.disabled = true;
      checkBtn.innerHTML = '<span class="spinner"></span>AI is searching nearby donors...';
      setTimeout(() => {
        checkBtn.disabled = false;
        checkBtn.innerHTML = '<i class="fas fa-search"></i> Check Availability';
        if (!bloodGroup || !location || !contact.match(/^[0-9]{10}$/)) {
          result.innerHTML = '<div class="alert-box"><strong>Please fill all fields correctly.</strong></div>';
          return;
        }
        // Simulate AI-powered matching
        if (bloodGroup === 'B+' || bloodGroup === 'O+') {
          result.innerHTML = `<div class="alert-box"><i class="fas fa-check-circle" style="color:#c70000"></i> Blood group <strong>${bloodGroup}</strong> is <b>available</b> at <strong>Mumbai Central Blood Bank</strong> near <b>${location}</b>.<br><a href="#banks" class="btn" style="margin-top:1rem;">View Blood Banks</a></div>`;
        } else {
          result.innerHTML = `<div class="alert-box"><i class="fas fa-exclamation-circle" style="color:#c70000"></i> Requested blood group <strong>${bloodGroup}</strong> is <b>not available</b> at blood banks near <b>${location}</b>.<br>Connecting you with <b>volunteer donors</b>...<br><a href="#donors" class="btn" style="margin-top:1rem;">View Donors</a></div>`;
        }
        setTimeout(() => {
          document.querySelectorAll('#result a.btn').forEach(link => {
            link.addEventListener('click', function(e) {
              e.preventDefault();
              const href = this.getAttribute('href');
              if (href && href.startsWith('#')) {
                document.querySelectorAll('.container').forEach(c => c.classList.remove('active'));
                document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
                const sectionId = href.replace('#', '');
                if (document.getElementById(sectionId)) {
                  document.getElementById(sectionId).classList.add('active');
                  document.querySelector('nav a[href="' + href + '"]').classList.add('active');
                }
                window.scrollTo({top:0,behavior:'smooth'});
              }
            });
          });
        }, 100);
      }, 1200);
    });
    // Auto-detect location
    document.getElementById('autoLocation').addEventListener('click', function(e) {
      e.preventDefault();
      const locInput = document.getElementById('location');
      locInput.value = '';
      locInput.placeholder = 'Detecting location...';
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(pos) {
          fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${pos.coords.latitude}&lon=${pos.coords.longitude}`)
            .then(res => res.json())
            .then(data => {
              locInput.value = data.address.suburb || data.address.city || data.address.town || data.address.village || data.display_name || '';
              locInput.placeholder = 'e.g. Andheri, Mumbai';
            })
            .catch(() => { locInput.placeholder = 'Could not detect location'; });
        }, () => { locInput.placeholder = 'Could not detect location'; });
      } else {
        locInput.placeholder = 'Geolocation not supported';
      }
    });
    // --- Search/Filter for Banks with Highlight ---
    function highlightMatch(text, query) {
      if (!query) return text;
      const re = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
      return text.replace(re, '<span class="highlight">$1</span>');
    }
    document.getElementById('bankSearch').addEventListener('input', function() {
      const q = this.value.trim().toLowerCase();
      document.querySelectorAll('#bankList .card').forEach(card => {
        const name = card.getAttribute('data-name');
        const area = card.getAttribute('data-area');
        if (name.toLowerCase().includes(q) || area.toLowerCase().includes(q)) {
          card.style.display = '';
          card.querySelector('strong').innerHTML = highlightMatch(name, q);
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(/<span class="highlight">|<\/span>/g, '');
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(name, highlightMatch(name, q));
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(area, highlightMatch(area, q));
        } else {
          card.style.display = 'none';
        }
      });
    });
    // --- Search/Filter for Donors with Highlight ---
    document.getElementById('donorSearch').addEventListener('input', function() {
      const q = this.value.trim().toLowerCase();
      document.querySelectorAll('#donorList .card').forEach(card => {
        const name = card.getAttribute('data-name');
        const group = card.getAttribute('data-group');
        const area = card.getAttribute('data-area');
        let match = false;
        if (name.toLowerCase().includes(q) || group.toLowerCase().includes(q) || area.toLowerCase().includes(q)) {
          match = true;
        }
        card.style.display = match ? '' : 'none';
        if (match) {
          card.querySelector('strong').innerHTML = highlightMatch(name, q);
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(/<span class="highlight">|<\/span>/g, '');
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(name, highlightMatch(name, q));
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(group, highlightMatch(group, q));
          card.querySelector('p').innerHTML = card.querySelector('p').innerHTML.replace(area, highlightMatch(area, q));
        }
      });
    });
    // --- Privacy/Security Notice ---
    if (!localStorage.getItem('lifelinePrivacyNotice')) {
      setTimeout(() => {
        const notice = document.createElement('div');
        notice.innerHTML = `
          <div style="position:fixed;bottom:20px;left:50%;transform:translateX(-50%);background:#fff5f5;border:2px solid #c70000;padding:1.2rem 2rem;border-radius:12px;box-shadow:0 2px 12px rgba(199,0,0,0.13);z-index:9999;">
            <b>Privacy Notice:</b> Your data is confidential and used only for emergency matching. <button id="closePrivacy" class="btn" style="margin-left:1rem;padding:0.4rem 1rem;font-size:1rem;">OK</button>
          </div>
        `;
        document.body.appendChild(notice);
        document.getElementById('closePrivacy').onclick = function() {
          notice.remove();
          localStorage.setItem('lifelinePrivacyNotice', '1');
        };
      }, 1200);
    }
    // --- (Optional) Simulated Real-Time Updates ---
    setTimeout(() => {
      if (document.getElementById('donorList')) {
        const newDonor = document.createElement('div');
        newDonor.className = 'card';
        newDonor.setAttribute('data-name', 'Vikas Singh');
        newDonor.setAttribute('data-group', 'O-');
        newDonor.setAttribute('data-area', 'Kurla');
        newDonor.innerHTML = `
          <p>
            <img src="https://randomuser.me/api/portraits/men/77.jpg" class="donor-avatar" alt="Vikas Singh">
            <strong>Vikas Singh</strong>
            <span class="badge" title="2+ Donations"><i class="fas fa-star"></i> 2+</span><br>
            <i class="fas fa-droplet" style="color:#c70000"></i> O-<br>
            <i class="fas fa-phone"></i> <a href="tel:9090909090" style="color:#c70000;text-decoration:none;">9090909090</a><br>
            <i class="fas fa-location-dot"></i> Kurla
          </p>
          <a href="tel:9090909090" class="btn" style="font-size:0.95rem;"><i class="fas fa-phone"></i> Call Donor</a>
        `;
        document.getElementById('donorList').appendChild(newDonor);
        // Update stats
        document.getElementById('stat-donors').textContent = parseInt(document.getElementById('stat-donors').textContent) + 1;
      }
    }, 10000);
    // --- (Optional) Notification System ---
    setTimeout(() => {
      if (window.Notification && Notification.permission !== "denied") {
        Notification.requestPermission().then(permission => {
          if (permission === "granted") {
            new Notification("New donor available!", {
              body: "Vikas Singh (O-) is now available in Kurla.",
              icon: "https://randomuser.me/api/portraits/men/77.jpg"
            });
          }
        });
      }
    }, 12000);
    // --- Statistics Dashboard Animation ---
    function animateStats(id, target, duration) {
      let start = 0;
      const el = document.getElementById(id);
      const step = Math.ceil(target / (duration / 30));
      function update() {
        start += step;
        if (start >= target) {
          el.textContent = target;
        } else {
          el.textContent = start;
          setTimeout(update, 30);
        }
      }
      update();
    }
    animateStats('stat-donors', 5, 900);
    animateStats('stat-requests', 12, 1200);
    animateStats('stat-banks', 4, 800);
    // --- Progress Bar Animation ---
    setTimeout(() => {
      const progress = document.getElementById('livesProgress');
      progress.style.width = '80%';
      progress.textContent = '16';
    }, 800);
  </script>
